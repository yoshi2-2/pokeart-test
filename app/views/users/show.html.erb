<div class="edit__container">
  <div class="edit__content">
    <div class="edit__side">
      <div class="edit__side__inner">
        <div class="edit__side__menu">
          <div class="edit__side__list">
            <div class="edit__icon">i</div>
            <span class="edit__side__menu--link"><a href="#">テンプレート</a></span>
          </div>
          <div class="edit__side__list">
            <div class="edit__icon">i</div>
            <span class="edit__side__menu--link"><a href="#">画像アップロード</a></span>
          </div>
          <div class="edit__side__list">
            <div class="edit__icon">i</div>
            <span class="edit__side__menu--link"><a href="#">素材</a></span>
          </div>
          <div class="edit__side__list">
            <div class="edit__icon">i</div>
            <span class="edit__side__menu--link"><a href="#">テキスト</a></span>
