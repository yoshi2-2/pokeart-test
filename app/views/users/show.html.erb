          <input type="color" value="" id="canvas-text-color">
          <label for="text-stroke-color">文字の縁枠の色:</label>
          <input type="color" value="" id="text-stroke-color">
        </div>


        <div class="main__content--design">
          <div class="canvas__content">
            <div class="canvas__wrapper__size">
              <div class="canvas__wrapper">
                <canvas id="canvas"></canvas>
              </div>
            </div>
            <input id="b" class="bubbly-button" type="button" value="画像をダウンロード" />
          </div>
        </div> <!-- main__content--design-->
      </div><!-- main__content-->
    </div><!-- main-->
 </div><!-- content-->
